{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Debug"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\LoggingWebApi\\Logs\\RestApiLog.log",
          "outputTemplate": "***{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz},[{MachineName}][{EnvironmentName}][{SourceContext}][{EventType:x8} {Level}],[{ThreadId}],[{HttpRequestClientHostName}]{Message}{NewLine}", //Timestamp:u for UTC
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 45,
          "rollingInterval": "Hour"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
